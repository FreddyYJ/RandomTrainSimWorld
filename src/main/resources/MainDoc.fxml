<AnchorPane fx:id="anchorPane" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="300.0" minWidth="500.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.github.freddyyj.randomtrainsimworld.gui.MainController">
   <children>
      <MenuBar AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <menus>
            <Menu mnemonicParsing="false" text="File">
               <items>
                  <MenuItem fx:id="itemSave" mnemonicParsing="false" onAction="#onSave" text="Save" />
                  <MenuItem fx:id="itemSaveAs" mnemonicParsing="false" onAction="#onSaveAs" text="Save As..." />
                  <MenuItem fx:id="itemLoad" mnemonicParsing="false" onAction="#onLoad" text="Load..." />
                  <MenuItem fx:id="itemClose" mnemonicParsing="false" onAction="#onClose" text="Close" />
               </items>
            </Menu>
            <Menu mnemonicParsing="false" text="Help">
               <items>
                  <MenuItem fx:id="itemAbout" mnemonicParsing="false" onAction="#onHelp" text="About" />
               </items>
            </Menu>
         </menus>
      </MenuBar>
      <GridPane layoutY="27.0" prefHeight="273.0" prefWidth="500.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="27.0">
         <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
         </columnConstraints>
         <rowConstraints>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" />
         </rowConstraints>
         <children>
            <ScrollPane prefHeight="200.0" prefWidth="200.0">
               <content>
                  <VBox fx:id="boxRoute" prefHeight="273.0">
                  </VBox>
               </content>
            </ScrollPane>
            <ScrollPane fx:id="boxLoco" prefHeight="200.0" prefWidth="200.0" GridPane.columnIndex="1">
            </ScrollPane>
            <ScrollPane prefHeight="200.0" prefWidth="200.0" GridPane.columnIndex="2">
               <content>
                  <VBox fx:id="boxWeather" prefHeight="200.0" />
               </content>
            </ScrollPane>
            <Button fx:id="buttonRandomRoute" mnemonicParsing="false" onAction="#onRandomRoute" text="Pick Route" GridPane.halignment="CENTER" GridPane.rowIndex="2" />
            <Button fx:id="buttonRandomLoco" mnemonicParsing="false" onAction="#onRandomLoco" text="Pick Locomotive" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.rowIndex="2" />
            <Button fx:id="buttonRandomWeather" mnemonicParsing="false" onAction="#onRandomWeather" text="Pick Weather" GridPane.columnIndex="2" GridPane.halignment="CENTER" GridPane.rowIndex="2" />
            <Button fx:id="buttonRandomAll" defaultButton="true" mnemonicParsing="false" onAction="#onRandomAll" text="Pick All" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.rowIndex="3" />
            <TextField fx:id="textPickedRoute" disable="true" GridPane.rowIndex="1" />
            <TextField fx:id="textPickedLoco" disable="true" GridPane.columnIndex="1" GridPane.rowIndex="1" />
            <TextField fx:id="textPickedWeather" disable="true" GridPane.columnIndex="2" GridPane.rowIndex="1" />
         </children>
      </GridPane>
	</children>
</AnchorPane>
